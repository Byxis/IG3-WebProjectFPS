{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "clear; cd client/; deno run --allow-read --allow-net --watch server.ts 8080",
      "isBackground": true,
      "problemMatcher": [],
      "dependsOn": [
        "Shared Folder Compilation and Adjustment"
      ],
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "clear; deno run --allow-net --allow-read --allow-import --allow-write --watch server/back_server.ts 3000",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start All",
      "dependsOn": ["Start Frontend", "Start Backend"],
      "problemMatcher": []
    },
    {
      "label": "Shared Folder Compilation and Adjustment",
      "type": "shell",
      "isBackground": true,
      "problemMatcher": [],
      "dependsOn": [
        "Compile Shared Folder",
        "Replace Imports in Shared Folder"
      ],
    },
    {
      "label": "Compile ts files in Shared Folder",
      "type": "shell",
      "command": "wsl",
      "args": [
        "tsc",
        "-p",
        "tsconfig.json"
      ],
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Replace Imports in Shared Folder",
      "type": "shell",
      "command": "wsl",
      "args": [
        "node",
        ".vscode/replaceImports.js"
      ],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
}
